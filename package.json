{
    "name": "dmvic",
    "version": "1.8.0",
    "description": "A DMVIC NPM package to manage DMVIC certificate requests",
    "main": "lib/index.mjs",
    "types": "index.d.ts",
    "type": "module",
    "exports": {
        ".": "./lib/index.mjs"
    },
    "scripts": {
        "type:check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
        "test:watch": "npm run lint && npm run test -- --watch",
        "ci": "npm run format:check && npm run lint && npm run type-check && npm test",
        "snyk:scan": "dotenv snyk test --all-projects",
        "security": "npm run snyk:scan"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/coduori/dmvic.git"
    },
    "keywords": [
        "dmvic",
        "motor vehicle insurance certificates",
        "kenya",
        "aki"
    ],
    "author": "oduori oranga <oduori.oranga@gmail.com>",
    "license": "GNU",
    "bugs": {
        "url": "https://github.com/coduori/dmvic/issues"
    },
    "homepage": "https://github.com/coduori/dmvic#readme",
    "dependencies": {
        "undici": "^7.16.0",
        "yup": "^1.7.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@jest/globals": "^30.1.2",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.5.2",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "chance": "^1.1.13",
        "cross-env": "^10.0.0",
        "dotenv-cli": "^10.0.0",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jest": "^29.0.1",
        "eslint-plugin-n": "^17.21.3",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-sonarjs": "^3.0.5",
        "eslint-plugin-testing-library": "^7.9.2",
        "eslint-plugin-unicorn": "^60.0.0",
        "globals": "^16.3.0",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "snyk": "^1.1299.0",
        "ts-jest": "^29.4.4",
        "typescript": "^5.9.2"
    },
    "engines": {
        "node": ">=20"
    }
}
